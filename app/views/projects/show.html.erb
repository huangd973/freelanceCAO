<% content_for :head do %>
    <%= javascript_pack_tag 'show', 'data-turbolinks-track': 'reload' %>
<% end %>

<h1><%= @project.name %></h1>
<p><strong><%= @project.created_by %> - <%= @project.published_at %> - <%= @project.budget %> euros</strong></p>
<p><%= @project.category %></p>
<p><%= @project.description %></p>
<p><%= @project.email %></p>

<hr>
<%= link_to 'Add a comment', "#", id: "add-comment" %>

<div id="new-comment">
    <%= render 'comments/form', comment: @project.comments.new %>
</div>

<div id="comments">
    <%= render 'comments/comments', comments: @project.comments.order(created_at: :desc) %>
</div>
